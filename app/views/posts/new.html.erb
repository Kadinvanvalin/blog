<h1>new post </h1>

<%= form_for :post, url: posts_path do |f| %>
  <ul>
    <li>
      <%= f.label :title %></br>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :body %></br>
      <%= f.text_area :body %>
    </li>

    <li>
      <%= f.submit %>
    </li>
  </ul>
<% end %>
